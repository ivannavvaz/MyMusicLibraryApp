<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="136dp"
    android:layout_height="180dp"
    android:paddingEnd="@dimen/common_padding"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivPodcast"
        android:layout_width="@dimen/item_podcast_image"
        android:layout_height="@dimen/item_podcast_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/imagen_podcast" />

    <TextView
        android:id="@+id/tvPodcastName"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_min_margin"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/nombre_del_podcast"
        android:textStyle="bold"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@id/ivPodcast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>